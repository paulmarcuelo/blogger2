<h1><%= @tag.name %></h1>

<% if logged_in? %>
    <h4>
        <%= link_to "Delete Tag", tag_path(@tag),
                method: :delete,
                data: {confirm: 'Are you sure you want to delete this tag?'} %>
    </h4>
<% end %>

<hr>

<ul class="list-group list-grou-flush">
    <% @tag.articles.each do |article| %>
        <li class="list-group-item"><%= link_to article.title, article_path(article) %></li>
    <% end %>
</ul>

<%= link_to "All Tags", tags_path %>
<br>
<%= link_to "All Articles", articles_path %>