<h1>Index Page</h1>
<% if logged_in? %>
    <h4> <%= link_to "Create New Article", new_article_path %> </h4>
<% end %>
<h4> <%= link_to "All Tags", tags_path %> </h4>
<h4> <%= link_to "All Authors", authors_path %> </h4>

<hr>

<ul class="list-group list-group-flash">
    <% @articles.each do |article| %>
        <li class="list-group-item">
            <%= link_to article.title, article_path(article) %>
        </li>
    <% end %>
</ul>
