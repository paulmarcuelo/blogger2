<%= form_for(@article, html: {multipart: true}) do |form| %>
    <ul class="list-group">
        <% @article.errors.full_messages.each do |error| %>
            <li class="list-group-item list-group-item-danger"><%= error %></li>
        <% end %>
    </ul>

    <div class="row">
        <%= form.label :title, class: 'form-control-label' %>
        <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="row">
        <%= form.label :body, class: 'form-control-label' %>
        <%= form.text_area :body, class: 'form-control ' %>
    </div>

    <div class="row">
        <%= form.label :tag_list, class: 'form-control-label' %>
        <%= form.text_field :tag_list, class: 'form-control' %>
    </div>

    <div class="row">
        <%= form.label :images, class: 'form-control-label' %>
        <%= form.file_field :images, multiple: true, class: 'form-control' %>
    </div>

    <%= form.submit 'Submit' %>
<% end %>