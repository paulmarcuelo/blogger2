<%= form_for [@article, @comment] do |form| %>

    <div class="row">
        <%= form.label :author_name, class: 'form-control-label' %>
        <%= form.text_field :author_name, class: 'form-control' %>
    </div>

    <div class="row">
        <%= form.label :body, class: 'form-control-label' %>
        <%= form.text_area :body, class: 'form-control' %>
    </div>

    <%= form.submit 'Comment' %>
    
<% end %>